<head>
  <title>Add tour</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<div class="text-center">
<%= form_with(model: tour) do |form| %>
  <% if tour.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tour.errors.count, "error") %> prohibited this tour from being saved:</h2>

      <ul>
        <% tour.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :destination, style: "display: block" %>
    <%= form.text_field :destination, :class => 'form-control', :style => 'width: 20%; margin: auto' %>
  </div>

  <div class="form-group">
    <%= form.label :activity, style: "display: block" %>
    <%= form.text_field :activity, :class => 'form-control', :style => 'width: 20%; margin: auto' %>
  </div>

  <div class="form-group">
    <%= form.label :date, style: "display: block" %>
    <%= form.text_area :date, :class => 'form-control', :style => 'width: 20%; margin: auto' %>
    <small class="form-text text-muted">DD.MM.YYYY format</small>
  </div>

  <div class="form-group">
    <%= form.label :days, style: "display: block" %>
    <%= form.number_field :days, :class => 'form-control', :style => 'width: 20%; margin: auto' %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, :class => 'form-control', :style => 'width: 20%; margin: auto' %>
  </div>
    <br/>
  <div>
    <%= form.submit :class => "btn btn-lg btn-outline-primary" %>
  </div>
  <% end %>
  </div>
